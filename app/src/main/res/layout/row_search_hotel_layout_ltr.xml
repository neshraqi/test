<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imgService"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/no_image_hotel" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtHotelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Hostal Veracruz"
                    android:textColor="@color/main_color_grey_800" />


                <RatingBar
                    android:id="@+id/rbHotelRate"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="4"
                    android:rating="4"
                    android:stepSize="1" />

                <TextView
                    android:id="@+id/txtStatusRefund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingLeft="1dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:text=" Non Refundable!"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/imgPlaceIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_place_object"
                        android:tint="@color/main_color_grey_600" />

                    <TextView
                        android:id="@+id/txtHotelAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@+id/imgPlaceIcon"
                        android:gravity="left"
                        android:lines="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Hostal Veracruz"
                        android:textColor="@color/main_color_grey_600"
                        android:textSize="11sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/txtRoomHotelStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Quadruple Room (Room Only)"
                    android:textColor="@color/main_color_grey_800"
                    android:textSize="11sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/txtTitleHotelPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="5dp"
                        android:text="Total Room Rate:"
                        android:textColor="@color/main_color_grey_700"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/txtTitleHotelPrice"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/txtTitleHotelPrice"
                        android:text="9,090,000 IRR"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tvPrice2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tvPrice"
                        android:layout_below="@+id/tvPrice"
                        android:layout_marginLeft="5dp"
                        android:text="9,090,000 IRR"
                        android:textColor="@color/material_grey_900"
                        android:textSize="11sp"
                        android:visibility="visible" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>