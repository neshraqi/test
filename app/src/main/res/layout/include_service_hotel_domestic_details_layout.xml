<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/cvWentFlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="4"
            android:gravity="left"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtHotelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="5dp"
                android:gravity="left|center_vertical"
                android:text="هتل پارس"
                android:textColor="@android:color/black" />

            <RatingBar
                android:id="@+id/rbRating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="@dimen/margin_place_top_ratings"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="5"
                android:stepSize="1"
                android:theme="@style/RatingBarYellow"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtHotelRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="5dp"
                android:gravity="right|center_vertical"
                android:text="سويیت یکخوابه دو نفره" />

            <TextView
                android:id="@+id/txtHotelDateRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="5dp"
                android:gravity="right|center_vertical"
                android:text="ازچهارشنبه ۲۵ بهمن ۱۳۹۶به مدت 1 شب" />

            <TextView
                android:id="@+id/txtPriceRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="5dp"
                android:gravity="right|center_vertical"
                android:text=""
                android:textSize="11sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>



