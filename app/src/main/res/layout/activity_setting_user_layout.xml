<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/styleConfigServiceBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layoutDown"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar_service" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layoutDown"
            android:layout_below="@+id/topLayout">

            <LinearLayout
                android:id="@+id/layoutMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="10dp"
                            android:background="@color/styleConfigTabBackground"
                            android:gravity="right"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/financialSection"
                            android:textColor="@color/styleConfigTabTitleSelected"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtCredit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="10dp"
                            android:gravity="right"
                            android:text="@string/credit"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/txtInventory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="right"
                            android:layout_margin="10dp"
                            android:layout_toRightOf="@+id/btnGetGift"
                            android:gravity="right"
                            android:text="@string/giftCard"
                            android:textColor="@android:color/black" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnLogOut"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/bg_tab_ways"
                                android:enabled="true"
                                android:text="@string/menuLogoutUsers"
                                android:textSize="11sp" />

                            <Button
                                android:id="@+id/btnGetGift"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/bg_tab_ways"
                                android:enabled="false"
                                android:text="@string/getGiftCard"
                                android:textSize="11sp"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/btnChargeGift"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/btnGetGift"
                                android:background="@drawable/bg_tab_ways"
                                android:enabled="false"
                                android:text="@string/chargeGiftCard"
                                android:textSize="11sp"
                                android:visibility="gone" />
                        </RelativeLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="10dp"
                            android:background="@color/styleConfigTabBackground"
                            android:gravity="right"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="@string/editProfile"
                            android:textColor="@color/styleConfigTabTitleSelected"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:theme="@style/TextLabel"
                                app:hintTextAppearance="@android:style/TextAppearance">

                                <EditText
                                    android:id="@+id/edtNameOfAccountHolder"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:enabled="false"
                                    android:gravity="right"
                                    android:hint="@string/nameOfAccountHolder"
                                    android:inputType="none" />
                            </android.support.design.widget.TextInputLayout>

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:theme="@style/TextLabel"
                                app:hintTextAppearance="@android:style/TextAppearance">

                                <EditText
                                    android:id="@+id/edtFullName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:enabled="false"
                                    android:gravity="right"
                                    android:hint="@string/fullName"
                                    android:inputType="none" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/numberSheba" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txtIRTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="right"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="10dp"
                                android:text="IR" />


                            <EditText
                                android:id="@+id/edtNumberAccountSheba"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_toRightOf="@+id/txtIRTitle"
                                android:enabled="false"
                                android:gravity="right"
                                android:inputType="number"
                                android:theme="@style/TextLabel" />

                        </RelativeLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/layoutDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardElevation="10dp">


        <hami.aniticket.View.Progressbar.ButtonWithProgress
            android:id="@+id/btnApplyEdition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.CardView>
</RelativeLayout>
