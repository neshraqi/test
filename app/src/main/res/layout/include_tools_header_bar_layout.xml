<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutTopHeader"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@color/styleConfigToolbarMaster"
    android:layoutDirection="ltr"
    android:visibility="visible">


    <TextView
        android:id="@+id/tvTitleHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/progressBarRespina"
        android:fadingEdge="horizontal"
        android:gravity="right"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/styleConfigToolbarMasterTitleTextColor"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBarRespina"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="invisible" />
</RelativeLayout>