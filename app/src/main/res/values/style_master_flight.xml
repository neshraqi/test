<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="baseStyleMasterFlight">
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>

    </style>

    <style name="editTextSearchPlaceStyleWhite" parent="baseStyleMasterFlight">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">#cad9f0</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
    </style>

    <style name="editTextStyle" parent="baseStyleMasterFlight">
        <!--<item name="android:textColor">@android:color/white</item>-->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/main_color_grey_500</item>
        <item name="android:background">@drawable/bg_auto_complete_place</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="editTextSearchPlaceStyle" parent="baseStyleMasterFlight">
        <!--<item name="android:textColor">@android:color/white</item>-->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">#cad9f0</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="editTextSearchPlaceStyleIndicator" parent="baseStyleMasterFlight">
        <!--<item name="android:textColor">@android:color/white</item>-->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="delayAutoCompletedStyle" parent="baseStyleMasterFlight">
        <!--<item name="android:textColor">@android:color/white</item>-->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
        <item name="android:background">@drawable/bg_auto_complete_place</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@color/material_orange_400</item>
    </style>

    <style name="TitleBadgeText" parent="AppTheme">
        <item name="android:textColor">@color/material_green_400</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TitleBadgeTitle" parent="AppTheme">
        <item name="android:textColor">@color/material_green_400</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="cardItemComment">
        <item name="android:textColor">#787878</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="cardItemCommentDate">
        <item name="android:textColor">#d6d6d6</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="cardItemPersonName">
        <item name="android:textColor">#313131</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="cardHeadTitle">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">22sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="positionIndicator">
        <item name="android:textColor">#8cffffff</item>
        <item name="android:textSize">66sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="positionIndicatorCurrent" parent="positionIndicator">
        <!--<item name="android:textColor">#da7c80b8</item>-->
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>