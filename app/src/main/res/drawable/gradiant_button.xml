<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/main_color_900" />
            <corners android:radius="6dp" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:radius="6dp" />
            <size
                android:width="30dp"
                android:height="30dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="6dp" />
            <gradient
                android:angle="90"
                android:startColor="@color/main_color_900"
                android:endColor="@color/main_color_300"
                android:type="linear" />
        </shape>
    </item>
</layer-list>

