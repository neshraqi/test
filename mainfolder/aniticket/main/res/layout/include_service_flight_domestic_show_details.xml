<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/styleConfigServiceItem">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:text="@string/contactInfoFlight"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtWentFlightCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="5dp"
                android:gravity="right|center_vertical"
                android:text="پرواز به مشهد"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtWentFlightDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginTop="2dp"
                android:gravity="right|center_vertical"
                android:text="Aug 29 2017 , 21:30 " />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:gravity="right">

                <ImageView
                    android:id="@+id/imgLogoAirLine"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/txtAirLineAndTypeClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/imgLogoAirLine"
                    android:gravity="right"
                    android:text="Economy"
                    android:textColor="@color/mdtp_light_gray" />

                <TextView
                    android:id="@+id/txtFlightName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/txtAirLineAndTypeClass"
                    android:gravity="right"
                    android:text="Economy"
                    android:textColor="@color/mdtp_light_gray"
                    android:textSize="11sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtFlightNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/imgLogoAirLine"
                android:gravity="right"
                android:text="Economy"
                android:textColor="@color/mdtp_light_gray"
                android:textSize="11sp" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>



